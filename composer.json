{
  "name": "1biot/fiquela",
  "description": "FiQueLa - File Query Language - PHP library for querying files",
  "type": "library",
  "license": ["MIT"],
  "require": {
    "php": ">=8.2",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-xmlreader": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-readline": "*",
    "symfony/console": "^8.0",
    "phpoffice/phpspreadsheet": "^5.4",
    "halaxa/json-machine": "^1.2",
    "league/csv": "^9.28",
    "symfony/yaml": "^8.0",
    "nette/neon": "^3.4",
    "guzzlehttp/guzzle": "^7.10",
    "nette/utils": "^4.1"
  },
  "bin": ["bin/fiquela-cli"],
  "require-dev": {
    "phpstan/phpstan-nette": "^1.3",
    "squizlabs/php_codesniffer": "^3.11",
    "phpunit/phpunit": "^10",
    "tracy/tracy": "^2.10",
    "phpstan/phpstan": "1.12.13"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "FQL\\": "./src/"
    }
  },
  "scripts": {
    "fiquela-cli": [
      "bin/fiquela-cli"
    ],
    "utils:phpstan": [
      "vendor/bin/phpstan"
    ],
    "utils:phpcs": [
      "vendor/bin/phpcs"
    ],
    "utils:phpcbf": [
      "vendor/bin/phpcbf"
    ],
    "utils:phpunit": [
      "vendor/bin/phpunit"
    ],
    "utils:phpunit:coverage": [
      "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text"
    ],
    "utils:phpunit:coverage-summary": [
      "@utils:phpunit:coverage --only-summary-for-coverage-text"
    ],
    "test:phpcs": [
      "@utils:phpcs --standard=phpcs.xml -p -n"
    ],
    "test:phpstan": [
      "@utils:phpstan analyse"
    ],
    "test:phpstan:no-memory-limit": [
      "@utils:phpstan analyse --memory-limit=-1"
    ],
    "test:phpstan:memory-limit-256": [
      "@utils:phpstan analyse --memory-limit=256M"
    ],
    "test:phpcs:summary": [
      "@utils:phpcs --standard=phpcs.xml -p -n --report=summary"
    ],
    "test:phpunit": [
      "@utils:phpunit"
    ],
    "test:phpunit:coverage": [
      "@utils:phpunit:coverage-summary"
    ],
    "test": [
      "@test:phpcs:summary",
      "@test:phpstan:memory-limit-256",
      "@test:phpunit:coverage"
    ],
    "example:csv": [
      "php -f examples/csv.php"
    ],
    "example:join": [
      "php -f examples/join.php"
    ],
    "example:json": [
      "php -f examples/json.php"
    ],
    "example:neon": [
      "php -f examples/neon.php"
    ],
    "example:sql": [
      "php -f examples/sql.php"
    ],
    "example:test": [
      "php -f examples/test.php"
    ],
    "example:xml": [
      "php -f examples/xml.php"
    ],
    "example:yaml": [
      "php -f examples/yaml.php"
    ],
    "examples": [
      "@example:csv",
      "@example:neon",
      "@example:join",
      "@example:json",
      "@example:sql",
      "@example:xml",
      "@example:yaml"
    ]
  }
}
