{
  "name": "1biot/jql",
  "description": "JSON Query Language",
  "type": "library",
  "license": ["MIT"],
  "require": {
    "php": ">=8.1",
    "ext-fileinfo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan-nette": "^1.3",
    "squizlabs/php_codesniffer": "^3.11",
    "phpunit/phpunit": "^10"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "JQL\\": "./src/"
    }
  },
  "scripts": {
    "utils:phpstan": [
      "vendor/bin/phpstan"
    ],
    "utils:phpcs": [
      "vendor/bin/phpcs"
    ],
    "utils:phpcbf": [
      "vendor/bin/phpcbf"
    ],
    "utils:phpunit": [
      "vendor/bin/phpunit"
    ],
    "test:phpcs": [
      "@utils:phpcs --standard=phpcs.xml -p -n"
    ],
    "test:phpstan": [
      "@utils:phpstan analyse"
    ],
    "test:phpstan:no-memory-limit": [
      "@utils:phpstan analyse --memory-limit=-1"
    ],
    "test:phpstan:memory-limit-256": [
      "@utils:phpstan analyse --memory-limit=256M"
    ],
    "test:phpcs:summary": [
      "@utils:phpcs --standard=phpcs.xml -p -n --report=summary"
    ],
    "test:phpunit": [
      "@utils:phpunit tests"
    ],
    "test": [
      "@test:phpcs:summary",
      "@test:phpstan:memory-limit-256",
      "@test:phpunit"
    ]
  }
}
