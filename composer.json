{
  "name": "1biot/uniquel",
  "description": "UniQueL - Universal Query Language for file data file like json, yaml, xml or neon.",
  "type": "library",
  "license": ["MIT"],
  "require": {
    "php": ">=8.1",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-xmlreader": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "phpstan/phpstan-nette": "^1.3",
    "squizlabs/php_codesniffer": "^3.11",
    "phpunit/phpunit": "^10",
    "tracy/tracy": "^2.10",
    "nette/neon": "^3.4",
    "symfony/yaml": "^7.2",
    "league/csv": "^9.20",
    "halaxa/json-machine": "^1.2",
    "phpstan/phpstan": "1.12.13"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "FQL\\": "./src/"
    }
  },
  "scripts": {
    "utils:phpstan": [
      "vendor/bin/phpstan"
    ],
    "utils:phpcs": [
      "vendor/bin/phpcs"
    ],
    "utils:phpcbf": [
      "vendor/bin/phpcbf"
    ],
    "utils:phpunit": [
      "vendor/bin/phpunit"
    ],
    "test:phpcs": [
      "@utils:phpcs --standard=phpcs.xml -p -n"
    ],
    "test:phpstan": [
      "@utils:phpstan analyse"
    ],
    "test:phpstan:no-memory-limit": [
      "@utils:phpstan analyse --memory-limit=-1"
    ],
    "test:phpstan:memory-limit-256": [
      "@utils:phpstan analyse --memory-limit=256M"
    ],
    "test:phpcs:summary": [
      "@utils:phpcs --standard=phpcs.xml -p -n --report=summary"
    ],
    "test:phpunit": [
      "@utils:phpunit"
    ],
    "test": [
      "@test:phpcs:summary",
      "@test:phpstan:memory-limit-256",
      "@test:phpunit tests"
    ],
    "example:csv": [
      "php -f examples/csv.php"
    ],
    "example:join": [
      "php -f examples/join.php"
    ],
    "example:json": [
      "php -f examples/json.php"
    ],
    "example:neon": [
      "php -f examples/neon.php"
    ],
    "example:sql": [
      "php -f examples/sql.php"
    ],
    "example:test": [
      "php -f examples/test.php"
    ],
    "example:xml": [
      "php -f examples/xml.php"
    ],
    "example:yaml": [
      "php -f examples/yaml.php"
    ],
    "examples": [
      "@example:csv",
      "@example:neon",
      "@example:join",
      "@example:json",
      "@example:sql",
      "@example:test",
      "@example:xml",
      "@example:yaml"
    ]
  }
}
